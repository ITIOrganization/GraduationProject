        @Html.LabelFor(model => model.TrackId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TrackId, ViewBag.tracks as SelectList, new { @class = "form-control" })
        </div>
    </div>

