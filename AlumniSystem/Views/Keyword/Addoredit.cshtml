@model AlumniSystem.Models.Keyword

@{
    ViewBag.Title = "Addoredit";
}



@using (Html.BeginForm("Addoredit", "Keyword", FormMethod.Post, new { onSubmit = "return jqueryAjaxPost(this);", data_reseturl = Url.Action("Addoredit", "Keyword", new { id = 0 }) }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />

                @if (Model.Id != 0)
    {
            <a class="btn btn-success" onclick="refreshAddnewtab('@Url.Action("Addoredit","Keyword",new { id=0})'),false"><i class="fa fa-plus"></i>Add New</a>
}
            </div>
        </div>
    </div>
}


